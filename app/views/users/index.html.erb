<h1>Users</h1>

<% @view.users.each do |user| %>
  <figure>
    <img src="" alt="gravatar_img" />
  </figure>
  <h3><%= user[:name] %> -- <%= user[:score] %></h3>
  <% if user[:quote] %>
  <p><%= user[:quote] %> -- <%= link_to user[:author], author_path(user[:author_id]) %></p>
  <%= form_tag(user_path(user_id), method: "put") do %>
    <%= hidden_field_tag("quote_id", user[:quote_id]) %>
    <%= submit_tag("like") %>
    <%= user[:likes] %>
  <% end %>
  <%= form_tag(user_path(user_id), method: "put") do %>
    <%= hidden_field_tag("quote_id", user[:quote_id]) %>
    <%= submit_tag("dislike") %>
    <%= user[:dislikes] %>
  <% end %>
  <% end %>
<% end %>
