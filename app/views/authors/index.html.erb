<% @view.authors.each do |author| %>
<table>
  <thead></thead>
  <tbody>
    <tr>
      <td>
        <figure>
          <a class="thumbnail" href="<%= author_path(author[:id]) %>">
            <img src="<%= author[:img_src] %>"/>
          </a>
        </figure>
      </td>
      <td>
        <h3><%= link_to author[:name], author_path(author[:id]) %></h3>
        <blockquote>
          <p>
            <%= author[:quote] %>
          </p>
        </blockquote>
      </td>
    </tr>
  </tbody>
</table>
<% end %>
<br />
<%= link_to 'Add Author', new_author_path, :class => "btn" %>
